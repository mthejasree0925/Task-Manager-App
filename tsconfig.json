{
  "compilerOptions": {
    "types": [
      "jest",
      "node"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src",
    "storybook",
    ".storybook",
  ],
  "extends": "expo/tsconfig.base"
}